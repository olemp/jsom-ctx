{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "outDir": "./lib",
        "declaration": true,
        "removeComments": false,
        "baseUrl": ".",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "sharepoint"
        ],
        "noImplicitAny": false,
        "allowUnreachableCode": false,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "pretty": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"]
}